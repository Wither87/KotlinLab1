<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">
    <ImageView
            android:id="@+id/user_info_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/outline_account_circle_24"
    android:backgroundTint="@color/black"/>
    <TextView
            android:id="@+id/user_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/user_info_icon"
            app:layout_constraintTop_toTopOf="@id/user_info_icon"
            app:layout_constraintBottom_toBottomOf="@id/user_info_icon"
            android:paddingHorizontal="6dp"
            tools:text="Иванов Иван Иванович"/>

</androidx.constraintlayout.widget.ConstraintLayout>